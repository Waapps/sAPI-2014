@using BetterCms.Module.Root.Content.Resources
@model IList<BetterCms.Module.Pages.ViewModels.Widgets.WidgetCategoryViewModel>

@if (Model != null && Model.Count > 0)
{
    foreach (var category in Model)
    {
        @Html.Partial("Partial/WidgetCategory", category)
    }
}
else
{
    <div class="bcms-category bcms-content-sliders">           
        <div class="bcms-category-titles">@RootGlobalization.Grid_NoDataAvailable_Message</div>
    </div>
}